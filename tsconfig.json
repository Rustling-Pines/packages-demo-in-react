{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react", // Enables classic JSX support for React 16
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["react", "react-dom", "node"] // Includes types for React and Node.js
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}